@model IEnumerable<MVC_Assignment2.Models.Movies>

@{
    ViewBag.Title = "Index";
}
<br/>
<p>
    @Html.ActionLink("Create Movie", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Moviename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofRelease)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Moviename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofRelease)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Mid }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id=item.Mid }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Mid }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
